<% layout('layouts/boilerplate') %>

    <h1>Edit Product</h1>

    <form action="/products/<%= product._id %>?_method=PUT" <%=product._id %> " method="post" novalidate
        class="validated-form">
        <label for="product">Product:</label>
        <input type="text" id="product" placeholder="Product name" name="name" value="<%= product.name %>" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <label for="price">Price:</label>
        <input type="number" id="price" placeholder="Price" name="price" value="<%= product.price %>" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <label for="category">Select Category:</label>
        <select name="category" id="category">
            <% for(let category of categories) { %>
                <option value="<%=category%>">
                    <%=category%>
                        <%= product.category===category ? 'selected' : ''>
                </option>
                <% } %>
        </select>
        <button>Submit</button>
    </form>